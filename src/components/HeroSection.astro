<section
  id="home"
  class="relative pt-32 pb-28 md:pt-40 md:pb-40 bg-cover bg-center bg-no-repeat"
  style="background-image: url('/images/001.png');"
>
  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/30"></div>

  <div class="relative max-w-6xl mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- LEFT CONTENT -->
      <div
        class="text-center md:text-left text-white drop-shadow-[0_6px_20px_rgba(0,0,0,0.3)]"
      >
        <h1
          class="text-4xl md:text-6xl font-extrabold leading-tight tracking-tight"
          style="font-family:Poppins, sans-serif;"
        >
          DSIN <br class="hidden md:block" />MANUFACTURING
        </h1>

        <p class="mt-2 text-lg md:text-xl text-white/90 italic">
          "Crafting Precision, Delivering Excellence"
        </p>

        <!-- Buttons -->
        <div class="mt-10 flex justify-center md:justify-start gap-4">
          <a
            href="#about"
            class="px-6 py-3 bg-[var(--color-primary)] text-white font-semibold rounded-full shadow-soft hover:bg-[var(--color-secondary)] transition"
          >
            Explore Company
          </a>

          <a
            href="/contact"
            class="px-6 py-3 border border-white text-white rounded-full font-semibold hover:bg-white/10 transition"
          >
            Contact Us
          </a>
        </div>

        <!-- ICON CARDS -->
        <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-4">
          <div class="glass-hero p-5 rounded-xxl shadow-soft text-left">
            <h4 class="font-semibold text-white">Precision</h4>
            <p class="text-sm text-white/90 mt-1">
              High-accuracy CNC and inspection.
            </p>
          </div>

          <div class="glass-hero p-5 rounded-xxl shadow-soft text-left">
            <h4 class="font-semibold text-white">Quality</h4>
            <p class="text-sm text-white/90 mt-1">
              ISO-grade process and QC testing.
            </p>
          </div>

          <div class="glass-hero p-5 rounded-xxl shadow-soft text-left">
            <h4 class="font-semibold text-white">Technology</h4>
            <p class="text-sm text-white/90 mt-1">
              Modern machinery and software tools.
            </p>
          </div>
        </div>
      </div>

      <!-- RIGHT IMAGE BLOCK (COSMETIC ELEMENT) -->
      <!-- <div class="hidden md:flex items-center justify-center">
        <div
          class="w-full max-w-sm p-6 bg-white/80 rounded-xxl shadow-soft backdrop-blur-md image-placeholder">
          <img
            src="/hexagon.png"
            alt="Brand visual"
            class="w-48 opacity-90 mx-auto"
          />
        </div>
      </div> -->
    </div>
  </div>
</section>
